{# Contact Form Section #}
<section class="py-6">
    <div class="container">
        <div class="row g-5">
            {# Contact Information #}
            <div class="col-lg-5" data-aos="fade-right">
                <div class="sticky-lg-top" style="top: 2rem;">
                    <h2 class="h3 fw-bold mb-4">Contact Information</h2>
                    <p class="text-muted mb-5">
                        Have questions about H√ºtte9 or want to book your stay? Fill out the form and we'll get back to you as soon as possible.
                    </p>

                    <div class="contact-info-list">
                        <div class="contact-info-item glass-card p-4 mb-3">
                            <div class="d-flex gap-3">
                                <div class="contact-icon">üìß</div>
                                <div>
                                    <h5 class="h6 fw-bold mb-1">Email</h5>
                                    <p class="text-muted mb-0">info@huette9.de</p>
                                </div>
                            </div>
                        </div>

                        <div class="contact-info-item glass-card p-4 mb-3">
                            <div class="d-flex gap-3">
                                <div class="contact-icon">üìç</div>
                                <div>
                                    <h5 class="h6 fw-bold mb-1">Location</h5>
                                    <p class="text-muted mb-0">Dormagen, Germany</p>
                                </div>
                            </div>
                        </div>

                        <div class="contact-info-item glass-card p-4">
                            <div class="d-flex gap-3">
                                <div class="contact-icon">‚è∞</div>
                                <div>
                                    <h5 class="h6 fw-bold mb-1">Response Time</h5>
                                    <p class="text-muted mb-0">Usually within 24 hours</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Contact Form #}
            <div class="col-lg-7" data-aos="fade-left">
                <div class="glass-card p-5">
                    <h2 class="h3 fw-bold mb-4">Send us a Message</h2>

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
                            <div class="d-flex align-items-center gap-2">
                                <span>‚úÖ</span>
                                <span>{{ message }}</span>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}

                    {{ form_start(form, {'attr': {'class': 'contact-form'}}) }}
                        <div class="row g-4">
                            <div class="col-md-6">
                                {{ form_row(form.name) }}
                            </div>

                            <div class="col-md-6">
                                {{ form_row(form.emailAddress) }}
                            </div>

                            <div class="col-md-6">
                                {{ form_row(form.phone) }}
                            </div>

                            <div class="col-md-6">
                                {{ form_row(form.subject) }}
                            </div>

                            <div class="col-12">
                                {{ form_row(form.message, {'attr': {'rows': 6}}) }}
                            </div>

                            <div class="col-12">
                                {{ form_row(form.consent) }}
                            </div>

                            <div class="col-12">
                                {{ form_row(form.copy) }}
                            </div>

                            {# Honeypot fields (hidden) #}
                            {{ form_row(form.website) }}
                            {{ form_row(form.emailrep) }}

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-lg w-100 py-3">
                                    <span class="d-flex align-items-center justify-content-center gap-2">
                                        <span>Send Message</span>
                                        <span>‚úâÔ∏è</span>
                                    </span>
                                </button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>

