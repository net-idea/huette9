{% extends 'email/base.html.twig' %}

{% block title %}New Contact Request{% endblock %}

{% block header_title %}Hütte9{% endblock %}

{% block body %}
  <h2 class="h1">New Contact Request</h2>

  <p class="p">
    <span class="label">Name:</span> {{ contact.name|e }}
  </p>
  <p class="p">
    <span class="label">Email:</span> {{ contact.emailAddress|e }}
  </p>
  <p class="p">
    <span class="label">Phone:</span> {{ contact.phone|default('')|e }}
  </p>

  <h3 class="h2">Message</h3>
  <div class="box">
    {{ contact.messageHtml|raw }}
  </div>

  <h3 class="h2">Meta</h3>
  <div class="meta">
    <ul class="ul">
      <li>IP: {{ contact.meta.ip|e }}</li>
      <li>User‑Agent: {{ contact.meta.userAgent|e }}</li>
      <li>Time: {{ contact.meta.time|e }}</li>
      <li>Host: {{ contact.meta.host|e }}</li>
    </ul>
  </div>
{% endblock %}
