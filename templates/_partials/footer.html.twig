    <hr class="my-3" />
    <div class="row">
      <div class="col-12">
        <p class="text-muted text-center small mb-0">
          &copy; {{ 'now'|date('Y') }} Hütte9. {{ 'Alle Rechte vorbehalten.'|trans }}
