  <div class="container">
    <div class="row">
      <div class="col-md-6 mb-3 mb-md-0">
        <h6 class="fw-bold mb-2">Hütte9</h6>
        <p class="text-muted small mb-0">
          {{ 'Eine gemütliche Wohnung in Dormagen zwischen Köln und Düsseldorf'|trans }}
        </p>
      </div>
      <div class="col-md-6">
        <div class="d-flex gap-3 justify-content-md-end">
          {% if app.request.locale == 'de' %}
            <a href="{{ path('app_datenschutz') }}" class="text-decoration-none text-muted small">{{ 'nav.datenschutz'|trans }}</a>
